<p id="notice"><%= notice %></p>

<section class="user_info">
	<h3>
		<%= gravatar_for @user %>
		<%= @user.name %>
	</h3> 
	<p><strong>Email: </strong> <%= @user.email %></p>
	<p><strong>Age: </strong> <%= @user.age %></p>
	<p><small><%= link_to "edit", edit_user_url(@user), action: "edit" if authorized? %></small></p>
</section>

<hr>

<h2>Your Posts</h2>
<% @authored_posts.each do |p| %>
	<%= render 'posts/post', post: p %>
<% end %>

