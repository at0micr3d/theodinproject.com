<%= form_for(Comment.new) do |f| %>
  
  <%= f.hidden_field(:author_id, :value => "#{current_user.id}") %>
  <%= f.hidden_field(:post_id, :value => "#{post.id}") %>
  <div class="content">
    <%= f.text_area :content, :placeholder => "Comment", size: "24x1" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
